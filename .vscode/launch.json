    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "serverReadyAction": {
                "pattern": "Running on http://([0-9]+[.][0-9]+[.][0-9]+[.][0-9]+:[0-9]+)",
                "uriFormat": "http://%s",
                "action": "openExternally"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
           
            "jinja": true
        }
    ]
}